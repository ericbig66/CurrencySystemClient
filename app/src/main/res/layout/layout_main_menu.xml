<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    tools:context=".MainMenu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/melon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:visibility="visible"
            app:civ_border_color="#3f51b5"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_color="#3f51b5"
            app:civ_shadow_radius="10"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:paddingTop="15dp"
            android:paddingRight="10dp"
            android:text="載入中...\n若30秒內無法載入請聯絡客服人員"
            android:textSize="20sp" />

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:columnCount="2"
            app:rowCount="3">

            <Button
                android:id="@+id/market"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="進入賣場"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                app:layout_row="0"
                app:layout_rowWeight="0.33" />

            <Button
                android:id="@+id/alter_member"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="會員中心"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_columnWeight="0.5"
                app:layout_row="2"
                app:layout_rowWeight="0.33" />

            <Button
                android:id="@+id/Event"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="活動報名"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_columnWeight="0.5"
                app:layout_row="0"
                app:layout_rowWeight="0.33" />

            <Button
                android:id="@+id/diary"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="日記簿"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                app:layout_row="2"
                app:layout_rowWeight="0.33" />

            <Button
                android:id="@+id/getcoin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:minHeight="0dp"
                android:onClick="execute"
                android:text="收紅包/簽到\n&amp;掃描兌換"
                android:textSize="20sp"
                app:layout_column="0"
                app:layout_columnWeight="0.5"
                app:layout_row="1"
                app:layout_rowWeight="0.1" />

            <Button
                android:id="@+id/paycoin"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:onClick="execute"
                android:text="送紅包"
                android:textSize="20sp"
                app:layout_column="1"
                app:layout_columnWeight="0.5"
                app:layout_row="1"
                app:layout_rowWeight="0.33" />
        </androidx.gridlayout.widget.GridLayout>

    </LinearLayout>
</RelativeLayout>